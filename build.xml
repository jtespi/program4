<project name="program4" default="compile" >

   <!-- property for the classpath to the JUnit class -->
   <property name="classpath" location="lib"/>
   <property name="build" location="build"/>

    <!-- taskdef produces an error :( 
    <taskdef name="junit"
            class="org.apache.tools.ant.taskdefs.optional.junit.JUnitTask">
      <classpath>
        <pathelement location="${junitdir}/junit.jar"/>
        <pathelement location="${junitdir}/ant-junit.jar"/>
      </classpath>
    </taskdef>
    -->

   <path id="build.classpath">
      <fileset dir="${classpath}">
         <include name="*.jar"/>
      </fileset>
   </path>

   <!-- standard compile task, with a custom classpath for JUnit -->
   <target name="compile" description="compile the source">
      <mkdir dir="${build}"/>
      <javac srcdir="." destdir="${build}" includeantruntime="false">
          <classpath refid="build.classpath"/>
      </javac>
   </target>

   

   <!-- run program CircleRun -->
   <target name="run" depends="compile">
     
      <java classname="CircleRun" fork="true">
      </java>
      
   </target>


   <!-- clean up by removing all generated files; do "ant clean" to start afresh -->
   <target name="clean">
      <delete>
         <fileset dir="." includes="*.class"/>
      </delete>
      <delete dir="${build}"/>
   </target>

</project>
